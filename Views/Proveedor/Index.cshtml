            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RetencionPorcentaje)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RetencionIva)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdProveedor">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdProveedor">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdProveedor">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
