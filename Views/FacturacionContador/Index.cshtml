@using ContaFacil.Models.ViewModel
@model FacturacionContadorViewModel
@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create">Crear Nuevo</a>
</p>
<form id="filtroForm" asp-action="Index" method="get" class="mb-3">
    <div class="form-row align-items-center">
        <div class="col-auto">
            <label class="sr-only" for="IdEmisor">Emisor</label>
            <select id="IdEmisor" name="IdEmisor" class="form-control" asp-for="SelectedEmisorId" asp-items="Model.Emisores">
                <option value="">-- Seleccione un emisor --</option>
            </select>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Filtrar</button>
        </div>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Facturas.First().Fecha)
            </th>
            <th>
                Monto Total
            </th>
            <th>
                Estado SRI
            </th>
            <th>
                Descripción SRI
            </th>
            <th>
                Estado
            </th>
            <th>
                Cliente
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Facturas)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MontoTotal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DescripcionSri)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EstadoBoolean)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdEmisorNavigation.RazonSocial)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdFactura">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.IdFactura">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdFactura">Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>