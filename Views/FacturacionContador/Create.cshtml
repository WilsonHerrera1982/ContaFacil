@model ContaFacil.Models.Factura

<h2>Crear Nueva Factura</h2>

<form id="facturaForm" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="IdEmisor" class="control-label"></label>
        <select asp-for="IdEmisor" class="form-control" asp-items="ViewBag.IdEmisor" id="IdEmisor">
            <option value="">-- Seleccione un emisor --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="IdCliente" class="control-label"></label>
        <select asp-for="IdCliente" class="form-control" id="IdCliente">
            <option value="">-- Seleccione un cliente --</option>
        </select>
    </div>

    <h3>Detalles de Factura</h3>
    <table id="detallesTable" class="table">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>Precio Unitario</th>
                <th>Subtotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>

    <button type="button" id="addDetalle" class="btn btn-secondary">Agregar Detalle</button>



    <div class="form-group">
        <label>Subtotal 0%</label>
        <input type="text" id="subtotal0" name="Subtotal0" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label>Subtotal 15%</label>
        <input type="text" id="subtotal15" name="Subtotal15" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Subtotal Sin Impuestos</label>
        <input type="text" id="subtotalSinImpuestos" name="SubtotalSinImpuestos" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Monto Total</label>
        <input type="text" id="montoTotal" name="MontoTotal" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="idPago" class="control-label">Forma de Pago</label>
        <select asp-for="idPago" class="form-control" asp-items="ViewBag.IdTipoPago" id="IdPago">
            <option value="">-- Seleccione un metodo de pago --</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Crear Factura</button>
</form>

@section Scripts {
    <script src="~/js/jquery-3.6.0.js"></script>
    <script src="~/js/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            let detalleCount = 0;

            $("#addDetalle").click(function () {
                let newRow = `
                            <tr>
                                <td>
                                    <select name="detalles[${detalleCount}].IdProducto" class="form-control producto-select">
                                        <option value="">-- Seleccione un producto --</option>
        @foreach (var producto in ViewBag.Productos)
        {
                                                    <option value="@producto.IdProducto" data-descripcion="@producto.Nombre" data-porcentaje="@producto.Porcentaje">@producto.Nombre</option>
        }
                                    </select>
                                    <input type="hidden" name="detalles[${detalleCount}].Descripcion" class="producto-descripcion">
                                </td>
                                <td><input type="number" name="detalles[${detalleCount}].Cantidad" class="form-control cantidad" value="1" min="1" /></td>
                                <td><input type="number" name="detalles[${detalleCount}].PrecioUnitario" class="form-control precio" readonly /></td>
                                <td><input type="number" class="form-control subtotal" readonly /></td>
                                <td><button type="button" class="btn btn-danger removeDetalle">Eliminar</button></td>
                            </tr>
                        `;
                $("#detallesTable tbody").append(newRow);
                detalleCount++;
            });

            $(document).on("click", ".removeDetalle", function () {
                $(this).closest("tr").remove();
                calcularTotal();
            });

            $(document).on("change", ".producto-select", function () {
                let productoId = $(this).val();
                let descripcion = $(this).find("option:selected").data("descripcion");
                let porcentaje = $(this).find("option:selected").data("porcentaje");
                let row = $(this).closest("tr");
                row.find(".producto-descripcion").val(descripcion);
                row.data("porcentaje", porcentaje);
                $.get(`/FacturacionContador/GetProductoDetails?idProducto=${productoId}`, function (data) {
                    row.find(".precio").val(data.precioUnitario);
                    calcularSubtotal(row);
                });
            });

            $(document).on("change", ".cantidad, .precio", function () {
                calcularSubtotal($(this).closest("tr"));
            });

            function calcularSubtotal(row) {
                let cantidad = parseFloat(row.find(".cantidad").val());
                let precio = parseFloat(row.find(".precio").val());
                let subtotal = cantidad * precio;
                row.find(".subtotal").val(subtotal.toFixed(2));
                calcularTotal();
            }

            function calcularTotal() {
                let total = 0;
                let subtotal0 = 0;
                let subtotal15 = 0;
                let subtotalSinImpuestos = 0;

                $("#detallesTable tbody tr").each(function () {
                    let subtotal = parseFloat($(this).find(".subtotal").val()) || 0;
                    let porcentaje = parseFloat($(this).data("porcentaje")) || 0;

                    console.log("Porcentaje:", porcentaje); // Verificación del valor de porcentaje

                    if (porcentaje === 0) {
                        subtotal0 += subtotal;
                    } else if (porcentaje === 15) {
                        subtotal15 += subtotal;
                    }

                    subtotalSinImpuestos += subtotal;
                    total += subtotal;
                });

                let impuesto15 = subtotal15 * 0.15;
                let totalConImpuestos = subtotal0 + subtotal15 + impuesto15;

                $("#subtotal0").val(subtotal0.toFixed(2));
                $("#subtotal15").val((subtotal15 + impuesto15).toFixed(2));
                $("#subtotalSinImpuestos").val(subtotalSinImpuestos.toFixed(2));
                $("#montoTotal").val(totalConImpuestos.toFixed(2));
            }
        });

    </script>
    <script>
        $(document).ready(function () {
            $('#IdEmisor').change(function () {
                var idEmisor = $(this).val();
                if (idEmisor) {
                    $.ajax({
                        url: '@Url.Action("GetClientesPorEmisor", "FacturacionContador")',
                        type: 'GET',
                        data: { idEmisor: idEmisor },
                        success: function (data) {
                            $('#IdCliente').empty();
                            $('#IdCliente').append($('<option></option>').val('').text('-- Seleccione un cliente --'));
                            $.each(data, function (i, item) {
                                $('#IdCliente').append($('<option></option>').val(item.value).text(item.text));
                            });
                        },
                        error: function () {
                            alert('Ocurrió un error al cargar los clientes.');
                        }
                    });
                } else {
                    $('#IdCliente').empty();
                    $('#IdCliente').append($('<option></option>').val('').text('-- Seleccione un cliente --'));
                }
            });
        });
    </script>
}