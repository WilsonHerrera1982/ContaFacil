@model ContaFacil.Models.TipoPago

@{
    ViewData["Title"] = "Create";
}


<h4>Tipo Pago</h4>
<hr />
<div class="form-container">
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodigoSri"  class="control-label"></label>
                    <input asp-for="CodigoSri" class="form-control" />
                    <span asp-validation-for="CodigoSri" class="text-danger"></span>
            </div>
            <div class="form-group">
                 <center><button class="button" type="submit">Guardar</button></center>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la Lista</a>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
