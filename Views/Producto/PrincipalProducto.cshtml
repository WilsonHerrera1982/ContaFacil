@{
    ViewData["Title"] = "Principal Producto";
}


<style>
    .form-group {
        width: 400px;
    }

    .row {
        justify-content: left;
    }
</style>
<div class="container mt-4">
    <div class="row row-cols-1 row-cols-md-3 g-4">
        <!-- Proveedor -->
        <div class="col">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-user-tie fa-3x mb-3 text-primary"></i>
                    <h5 class="card-title">Proveedor</h5>
                    <p class="card-text">Gestiona los proveedores del sistema.</p>
                    <a asp-action="Index" asp-controller="Proveedor" class="btn btn-primary mt-auto">Gestionar Proveedor</a>
                </div>
            </div>
        </div>

        <!-- Categoria Producto -->
        <div class="col">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-tags fa-3x mb-3 text-success"></i>
                    <h5 class="card-title">Categoria Producto</h5>
                    <p class="card-text">Gestiona las categorías de productos.</p>
                    <a asp-action="Index" asp-controller="CategoriaProducto" class="btn btn-success mt-auto">Gestionar Categoria</a>
                </div>
            </div>
        </div>

        <!-- Producto -->
        <div class="col">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-boxes fa-3x mb-3 text-info"></i>
                    <h5 class="card-title">Producto</h5>
                    <p class="card-text">Gestiona los productos disponibles.</p>
                    <a asp-action="Index" asp-controller="Producto" class="btn btn-info mt-auto">Gestionar Producto</a>
                </div>
            </div>
        </div>

        
    </div>
</div>
