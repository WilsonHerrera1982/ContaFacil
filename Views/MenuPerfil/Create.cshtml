@model ContaFacil.Models.MenuPerfil

@{
    ViewData["Title"] = "Create";
}
<script src="~/lib/li"></script>
<link href="~/lib/limonte-sweetalert2/sweetalert2.min.css" rel="stylesheet" />
<script src="~/lib/limonte-sweetalert2/sweetalert2.min.js"></script>
<h1>Crear</h1>

<h4>MenuPerfil</h4>
<hr />
<div class="form-container">
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdMenu" class="control-label"></label>
                <select asp-for="IdMenu" class ="form-control" asp-items="ViewBag.IdMenu"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdPerfil" class="control-label"></label>
                <select asp-for="IdPerfil" class ="form-control" asp-items="ViewBag.IdPerfil"></select>
            </div>           
            <div class="form-group">
                 <center><button class="button" type="submit">Guardar</button></center>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la Lista</a>
</div>
</div>
<partial name="_NotificacionParcial" />
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
