@model ContaFacil.Models.MenuPerfil

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Menu Perfil</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdMenuPerfil" />
            <div class="form-group">
                <label asp-for="IdMenu" class="control-label"></label>
                <select asp-for="IdMenu" class="form-control" asp-items="ViewBag.IdMenu"></select>
                <span asp-validation-for="IdMenu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdPerfil" class="control-label"></label>
                <select asp-for="IdPerfil" class="form-control" asp-items="ViewBag.IdPerfil"></select>
                <span asp-validation-for="IdPerfil" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Estado" /> Activo/Inactivo
                </label>
            </div>
            
            <div class="form-group">
                <center><button class="button" type="submit">Guardar</button></center>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
