@model ContaFacil.Models.Inventario

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Inventario</h4>
<hr />
<div class="form-container">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="IdProducto" class="control-label">ID Producto</label>
                    <select asp-for="IdProducto" class ="form-control" asp-items="ViewBag.IdProducto"></select>
                </div>
                <div class="form-group">
                    <label asp-for="TipoMovimiento" class="control-label">Tipo de Movimiento</label>
                    <select asp-for="TipoMovimiento" class="form-control">
                        <option value="">Seleccione un tipo de movimiento</option>
                        <option value="E">Ingreso</option>
                        <option value="S">Egreso</option>
                    </select>
                    <span asp-validation-for="TipoMovimiento" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cantidad" class="control-label"></label>
                    <input asp-for="Cantidad" class="form-control" />
                    <span asp-validation-for="Cantidad" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NumeroDespacho" class="control-label">Número de Despacho</label>
                    <input asp-for="NumeroDespacho" class="form-control" />
                    <span asp-validation-for="NumeroDespacho" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descripcion" class="control-label">Descripción</label>
                    <input asp-for="Descripcion" class="form-control" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <center><button class="button" type="submit">Crear</button></center>
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
