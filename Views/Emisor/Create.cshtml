@model ContaFacil.Models.Emisor

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Emisor</h4>
<hr />
<div class="form-container">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
               
                <div class="form-group">
                    <label asp-for="RazonSocial" class="control-label">Razón Social</label>
                    <input asp-for="RazonSocial" class="form-control" />
                    <span asp-validation-for="RazonSocial" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NombreComercial" class="control-label">Nombre Comercial</label>
                    <input asp-for="NombreComercial" class="form-control" />
                    <span asp-validation-for="NombreComercial" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Ruc" class="control-label">RUC</label>
                    <input asp-for="Ruc" class="form-control" />
                    <span asp-validation-for="Ruc" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NombreUsuario" class="control-label">Nombre de Usuario</label>
                    <input asp-for="NombreUsuario" class="form-control" />
                    <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Telefono" class="control-label">Teléfono</label>
                    <input asp-for="Telefono" class="form-control" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CorreoElectronico" class="control-label">Correo Electrónico</label>
                    <input asp-for="CorreoElectronico" class="form-control" />
                    <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Establecimiento" class="control-label"></label>
                    <input asp-for="Establecimiento" class="form-control" />
                    <span asp-validation-for="Establecimiento" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PuntoEmision" class="control-label">Punto de Emisión</label>
                    <input asp-for="PuntoEmision" class="form-control" />
                    <span asp-validation-for="PuntoEmision" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Secuencial" class="control-label"></label>
                    <input asp-for="Secuencial" class="form-control" />
                    <span asp-validation-for="Secuencial" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Direccion" class="control-label">Dirección</label>
                    <input asp-for="Direccion" class="form-control" />
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CertificadoDigital" class="control-label">Certificado Digital</label>
                    <input asp-for="CertificadoDigital" class="form-control" />
                    <span asp-validation-for="CertificadoDigital" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Clave" class="control-label"></label>
                    <input asp-for="Clave" class="form-control" />
                    <span asp-validation-for="Clave" class="text-danger"></span>
                </div>
                <div class="form-group">
    <label asp-for="ObligadoContabilidad" class="control-label">Obligado a Contabilidad</label>
    <select asp-for="ObligadoContabilidad" class="form-control" id="obligadoContabilidad">
        <option value="">-- Seleccione una opción --</option>
        <option value="true">Sí</option>
        <option value="false">No</option>
    </select>
    <span asp-validation-for="ObligadoContabilidad" class="text-danger"></span>
</div>

<div id="mensajeObligado" class="alert alert-warning" style="display: none;">
    Su paquete no permite registro de empresas
</div>
                <div class="form-group">
                    <label asp-for="TipoAmbiente" class="control-label">Tipo de Ambiente</label>
                    <input asp-for="TipoAmbiente" class="form-control" />
                    <span asp-validation-for="TipoAmbiente" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <center><button class="button" type="submit">Crear</button></center>
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            $('#obligadoContabilidad').change(function () {
                if ($(this).val() === 'true') {
                    $('#mensajeObligado').show();
                    setTimeout(function () {
                        $('#obligadoContabilidad').val('false').trigger('change');
                    }, 3000); // Espera 3 segundos antes de cambiar a "No"
                } else {
                    $('#mensajeObligado').hide();
                }
            });
        });
    </script>
}
