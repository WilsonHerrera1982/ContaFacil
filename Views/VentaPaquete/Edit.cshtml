@model ContaFacil.Models.VentaPaquete

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>VentaPaquete</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdVentaPaquete" />
            <div class="form-group">
                <label asp-for="IdPaquete" class="control-label"></label>
                <select asp-for="IdPaquete" class="form-control" asp-items="ViewBag.IdPaquete"></select>
                <span asp-validation-for="IdPaquete" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdUsuario" class="control-label">ID Usuario</label>
                <select asp-for="IdUsuario" class="form-control" asp-items="ViewBag.IdUsuario"></select>
                <span asp-validation-for="IdUsuario" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="EstadoBoolean" /> Activo/Inactivo
                </label>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
