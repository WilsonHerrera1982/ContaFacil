@model ContaFacil.Models.ViewModel.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title - ContaFacil</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <script src="~/lib/li"></script>
    <link href="~/lib/limonte-sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <script src="~/lib/limonte-sweetalert2/sweetalert2.min.js"></script>
    <style>
        body {
            background-color: #F5F7FA;
            font-family: Arial, sans-serif;
        }

        .login-container {
            width: 500px;
            margin: 0 auto;
            margin-top: 100px;
            padding: 20px;
            background-color: #1A3263;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .login-header {
            text-align: center;
            color: #1A3263;
            font-size: 24px;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #CED4DA;
            border-radius: 5px;
        }

        .login-btn {
            background-color: #1A3263;
            color: #FFFFFF;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="login-container offset-1  offset-md-3 col-10 col-md-6">
        <div class="card br-30 border-0 bg-light bg-opacity-50 px-4">
            <div class="card-body">
                <div class="login-header">CONTAFACIL Acceso al sistema</div>
                <img src="~/img/logo.png" class="img-fluid max-w-400 mx-auto d-block my-5" />
                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div class="error-message">@ViewBag.ErrorMessage</div>
                }
                <form asp-action="Login" method="post">
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <input class="form-control" asp-for="Username" placeholder="Nombre de Usuario">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            </div>
                            <input class="form-control" type="password" asp-for="Password" placeholder="Contraseña">
                        </div>
                    </div>
                    <center>
                        <button class="login-btn" type="submit"><i class="fas fa-solid fa-lock-open"></i> Ingresar</button>
                    </center>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
<partial name="_NotificacionParcial" />