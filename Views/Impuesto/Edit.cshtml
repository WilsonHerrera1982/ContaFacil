@model ContaFacil.Models.Impuesto

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Impuesto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdImpuesto" />
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <select asp-for="Tipo" class="form-control">
                    <option value="IVA">IVA</option>
                    <option value="RETENCION EN LA FUENTE">RETENCIÓN EN LA FUENTE</option>
                    <option value="RETENCION IVA">RETENCIÓN IVA</option>
                </select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Porcentaje" class="control-label"></label>
                <input asp-for="Porcentaje" class="form-control" />
                <span asp-validation-for="Porcentaje" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="CodigoSri" class="control-label"></label>
                <input asp-for="CodigoSri" class="form-control" />
                <span asp-validation-for="CodigoSri" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodigoPorcentajeSri" class="control-label"></label>
                <input asp-for="CodigoPorcentajeSri" class="form-control" />
                <span asp-validation-for="CodigoPorcentajeSri" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="EstadoBoolean" /> Activo/Inactivo
                </label>
            </div>
            <div class="form-group">
                <center><button class="button" type="submit">Guardar</button></center>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
