@using Newtonsoft.Json
@using Newtonsoft.Json.Linq
@using ContaFacil.Models
@{
    var menuJson = Context.Session.GetString("menu");
    List<Menu> menus = new List<Menu>();
    if (!string.IsNullOrEmpty(menuJson))
    {
        try
        {
            var jObject = JObject.Parse(menuJson);
            var values = jObject["$values"];
            if (values != null)
            {
                menus = values.ToObject<List<Menu>>();
            }
        }
        catch (JsonException ex)
        {
            Console.WriteLine($"Error al deserializar JSON: {ex.Message}");
        }
    }
}
@{
    var usuario = Context.Session.GetString("_usuario");
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FINANSYS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ContaFacil.styles.css" asp-append-version="true" />
    <link href="~/lib/limonte-sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <script src="~/lib/limonte-sweetalert2/sweetalert2.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

</head>
<body>
    <header style="background: conic-gradient(from 0deg at 50% 50%, #1A3263, #64B5F6, #1A3263); width: 100%; min-height: 100px;">

        <nav class="navbar navbar-expand-sm navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/Logo1sin fondo.png" alt="ContaFacil Logo" class="mr-2" style="height: 120px;">
                  
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (menus != null)
                        {
                            @foreach (var menu in menus)
                            {
                                <li class="nav-item dropdown">
                                    @if (menu.subMenus != null && menu.subMenus.Any())
                                    {
                                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown_@menu.IdMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            @menu.Descripcion
                                        </a>
                                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown_@menu.IdMenu">
                                            @foreach (var subMenu in menu.subMenus)
                                            {
                                                <li><a class="dropdown-item" asp-controller="@subMenu.Controller" asp-action="@subMenu.Action">@subMenu.Descripcion</a></li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <a class="nav-link text-dark @(ViewContext.RouteData.Values["Controller"].ToString() == menu.Controller ? "active-menu" : "")"
                                           asp-controller="@menu.Controller"
                                           asp-action="@menu.Action">@menu.Descripcion</a>
                                    }
                                </li>
                            }
                        }
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <div class="user-icon-wrapper">
                                    <img src="~/img/user.png" alt="User Icon" class="user-icon">
                                </div>
                            </a>
                            <p class="user-name">Usuario: @usuario</p>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="#">Perfil</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Login" asp-action="Logout">Cerrar Sesión</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div id="floating-alert" class="alert alert-floating alert-danger" style="display:none;"></div>
    <div class="container">
        <script src="~/lib//limonte-sweetalert2/sweetalert2.min.js" asp-append-version="true"></script>
        <main role="main" class="pb-3">
            @Html.Partial("_NotificacionParcial")
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - FINANSYS - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<script>
    $(document).ready(function () {
        setTimeout(function () {
            $(".alerta").fadeOut(2000);
        }, 3000);
    });

    $("#alerta").delay().hide(1);

</script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var activeDropdownItem = document.querySelector('.dropdown-item.active-menu');
        if (activeDropdownItem) {
            var dropdownToggle = activeDropdownItem.closest('.dropdown').querySelector('.dropdown-toggle');
            if (dropdownToggle) {
                dropdownToggle.classList.add('active-menu');
            }
        }
    });
</script>